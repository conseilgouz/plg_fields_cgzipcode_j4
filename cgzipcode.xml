<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" version="4.0" group="fields" method="upgrade">
	<name>plg_fields_cgzipcode</name>
	<author>ConseilGouz</author>
	<creationDate>November 2022</creationDate>
	<copyright>Copyright (C) 2022 ConseilGouz. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>pascal.leconte@conseilgouz.com</authorEmail>
	<authorUrl>www.conseilgouz.com</authorUrl>
	<version>2.0.0</version>
	<description>PLG_FIELDS_CGZIPCODE_XML_DESC</description>
	<files>
		<filename plugin="cgzipcode">cgzipcode.php</filename>
		<folder>fields</folder>
		<folder>params</folder>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/plg_fields_cgzipcode.ini</language>
		<language tag="en-GB">language/en-GB/plg_fields_cgzipcode.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_fields_cgzipcode.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_fields_cgzipcode.sys.ini</language>
	</languages>
	<media destination="plg_fields_cgzipcode" folder="media">
		<folder>js</folder>
		<filename>index.html</filename>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="country"
					type="hidden"
					label="PLG_FIELDS_CGZIPCODE_COUNTRY_LABEL"
					description="PLG_FIELDS_CGZIPCODE_COUNTRY_DESC" default="fr"
				/>
				<field
					name="maxlength"
					type="hidden"
					label="PLG_FIELDS_CGZIPCODE_MAXLENGTH_LABEL"
					description="PLG_FIELDS_CGZIPCODE_MAXLENGTH_DESC" default="5"
				/>
			</fieldset>
		</fields>
	</config>
	<changelogurl>https://raw.githubusercontent.com/conseilgouz/plg_fields_cgzipcode_j4/master/cgzipcode_changelog.xml</changelogurl>
	<updateservers>
		<server type="extension" name="plg_fields_cgzipcode" priority="1">https://raw.githubusercontent.com/conseilgouz/updates_github/master/plg_fields_cgzipcode_update.xml</server>
	</updateservers>
	
</extension>
